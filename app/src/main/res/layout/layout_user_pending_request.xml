<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="10dp"
            >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_avatar_pending"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/family"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintVertical_bias="0"
                    />
                <TextView
                    android:id="@+id/txt_username_pending"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tên người dùng"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/img_avatar_pending"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintWidth_percent="0.7"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintHorizontal_bias="0.1"

                    />
                <Button
                    android:id="@+id/btn_denied_fr"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E5E5E5"
                    android:text="Từ chối"
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    app:cornerRadius="20dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toBottomOf="@id/txt_username_pending"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/img_avatar_pending"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.025"
                    app:layout_constraintVertical_bias="1"
                   />
                <Button
                    android:id="@+id/btn_accept_fr"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#237EE9"
                    android:text="Đồng ý"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    app:cornerRadius="20dp"
                    app:layout_constraintTop_toBottomOf="@id/txt_username_pending"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/btn_denied_fr"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintVertical_bias="1"
                    />


        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
